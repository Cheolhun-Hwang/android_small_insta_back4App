<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <TextView
            android:id="@+id/item_home_post_nickname"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="16dp"
            android:text="user_nickname"
            android:layout_weight="1"
            android:gravity="center|left"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/item_home_post_more_menu"
            android:background="@color/alpha"
            android:layout_weight="0.15"
            android:tint="@color/grey_600"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/item_home_post_viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="@color/white"
            android:padding="6dp"
            android:id="@+id/item_home_post_pagenum"
            android:layout_margin="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="0/0"
            android:textStyle="normal"
            android:background="#bb000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp">
        <ImageButton
            android:id="@+id/item_home_post_favorite"
            android:layout_weight="0.25"
            android:background="@color/alpha"
            android:tint="@color/black"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/item_home_post_favorite_count"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:gravity="center"
            android:text="10개"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/item_home_post_comment"
            android:layout_weight="0.25"
            android:background="@color/alpha"
            android:tint="@color/black"
            android:src="@drawable/ic_chat_bubble_outline_black_24dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/item_home_post_comment_count"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:gravity="center"
            android:text="10개"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>