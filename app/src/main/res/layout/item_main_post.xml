<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/item_main_post_ava"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <TextView
            android:id="@+id/item_main_post_nickname"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="12dp"
            android:gravity="center|left"
            android:text="user_text_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/item_main_post_more_btn"
            android:background="@color/alpha"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_weight="0.15"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/item_main_post_image"
            android:src="@drawable/no_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_main_post_text"
            android:gravity="left|center"
            android:textStyle="bold"
            android:textColor="@color/grey_600"
            android:textSize="12dp"
            android:text="Main Post..."
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <ImageButton
            android:scaleType="center"
            android:background="@color/alpha"
            android:id="@+id/item_main_post_like_btn"
            android:tint="@color/black"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/item_main_post_like_count"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:gravity="center"
            android:text="0개"
            android:textSize="11dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/item_main_post_comment_btn"
            android:scaleType="center"
            android:src="@drawable/ic_chat_bubble_outline_black_24dp"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/item_main_post_comment_count"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:gravity="center"
            android:text="0개"
            android:textSize="11dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>